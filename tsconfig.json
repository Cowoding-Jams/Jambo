{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"rootDir": "./src/",
		"moduleResolution": "node",
		"baseUrl": "./src/",
		"allowJs": false,
		"declaration": true,
		"outDir": "./dist/",
		"removeComments": true,
		"newLine": "lf",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"allowUnreachableCode": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
